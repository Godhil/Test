<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.test.Office.Reservation.ReservationActivity">

    <Button
        android:text="Создать новую бронь"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/buttonCreateNew"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false" />
    <Button
        android:text="Обновить"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/buttonRefresh"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonCreateNew"
        android:layout_toEndOf="@+id/buttonCreateNew"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="false" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservation"
        android:layout_below="@+id/buttonCreateNew" />

</RelativeLayout>
